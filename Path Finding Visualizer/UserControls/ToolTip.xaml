<UserControl x:Class="Path_Finding_Visualizer.UserControls.ToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Path_Finding_Visualizer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="195">
    <Grid>
        <Path HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Stroke="Black"
              Fill="CadetBlue"
              Margin="10"
              Stretch="Fill"
              Data="M0,0 L10,-10 10,-27 C10, -27 10, -32 18, -32 L198,-32 C208,-31 208,-25 208,-15 L208,0 208,20 C208,30 205,33 195,33 L20,33 C15,33 10,33 10,25 L10,10"/>

            <TextBlock FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="{Binding }"/>

    </Grid>
</UserControl>
