<UserControl x:Class="Path_Finding_Visualizer.UserControls.GridCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Path_Finding_Visualizer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="root">
    <Label BorderBrush = "{StaticResource GridStrokeBrush}"
           BorderThickness = "0.5"
           Margin = "-1"
           MouseEnter="Label_MouseEnter"
           MouseDown="Label_MouseDown">
        <local:IconPresenter Icon="{Binding Icon, ElementName=root}"/>
    </Label>
</UserControl>